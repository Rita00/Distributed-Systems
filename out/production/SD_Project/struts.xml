<?xml version="1.0" encoding="UTF-8"?>

<!-- The core configuration file for the framework is the default (struts.xml) file
and should reside on the classpath of the webapp (generally /WEB-INF/classes). -->

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <!-- devMode equals debug information and reload everything for every request -->
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.ui.theme" value="simple"/>

    <package name="webServer" extends="struts-default">

        <default-action-ref name="index"/>

        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>

        <!-- all exceptions not caught by the application will lead to error.jsp -->
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"/>
        </global-exception-mappings>

        <!-- 'index' action leads to the view provided by login.jsp -->
        <action name="index">
            <result>/index.jsp</result>
        </action>

        <action name="login" class="webServer.action.LoginAction" method="execute">
            <result name="success">/chooseElection.jsp</result>
            <result name="login">/login.jsp</result>
        </action>

        <action name="chooseElection" class="webServer.action.ChooseElectionAction" method="execute">
            <result name="success">/vote.jsp</result>
            <result name="error">/chooseElection.jsp</result>
        </action>

        <action name="vote" class="webServer.action.VoteAction" method="execute">
            <result name="success">/chooseElection.jsp</result>
        </action>

        <action name="registerConsole" class="webServer.action.RegisterAction" method="execute">
            <result name="success">/registerConsole.jsp</result>
        </action>

        <action name="register" class="webServer.action.RegisterAction" method="execute">
            <result>/menuConsole.jsp</result>
        </action>

        <action name="createElection">
            <result>/createElectionConsole.jsp</result>
        </action>

        <action name="manageElection">
            <result>/manageElectionsConsole.jsp</result>
        </action>
    </package>
</struts>